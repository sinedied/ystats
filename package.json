{
  "name": "ystats",
  "version": "1.0.1",
  "description": "Simple CLI to quickly get YouTube stats for any video, playlist or channel",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/ystats.git"
  },
  "exports": "./lib/index.js",
  "bin": {
    "ys": "./bin/ys.js"
  },
  "scripts": {
    "lint:fix": "xo --fix",
    "start": "node index.js",
    "test": "xo",
    "release:check": "semantic-release --dry-run"
  },
  "keywords": [
    "youtube",
    "video",
    "channel",
    "playlist",
    "statistics",
    "stats",
    "views",
    "cli",
    "json",
    "csv"
  ],
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "homepage": "https://github.com/sinedied/ystats",
  "bugs": {
    "url": "https://github.com/sinedied/ystats/issues"
  },
  "license": "MIT",
  "dependencies": {
    "dotenv": "^10.0.0",
    "googleapis": "^89.0.0",
    "got": "^11.8.2",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.5",
    "table": "^6.7.3"
  },
  "devDependencies": {
    "semantic-release": "^18.0.0",
    "semantic-release-npm-github": "^2.0.0",
    "xo": "^0.46.4"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node"
    ],
    "rules": {
      "unicorn/prefer-node-protocol": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/prevent-abbreviations": "off",
      "no-await-in-loop": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "release": {
    "extends": "semantic-release-npm-github",
    "branches": "main"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "files": [
    "bin",
    "lib"
  ]
}
